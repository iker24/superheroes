{% extends 'unisuperheroesBundle::layout.html.twig' %}

{% block cuerpo -%}
    <h1>SUPERHEROE list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nombre</th>
                <th>Descripcion</th>
                <th>Habilidades</th>
                <th>Edad</th>
                <th>Sexo</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('superheroe_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.nombre }}</td>
                <td>{{ entity.descripcion }}</td>
                <td>{{ entity.habilidades }}</td>
                <td>{% if entity.edad %}{{ entity.edad|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{{ entity.sexo }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('superheroe_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('superheroe_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('superheroe_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
